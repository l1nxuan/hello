{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceFolder}",
            "executable": "build/Debug/hello.elf",
            "name": "Debug with OpenOCD",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "searchDir": [
                "${workspaceFolder}/openocd"
            ],
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "clearSearch": false, // https://github.com/Marus/cortex-debug/wiki/SEGGER-RTT-support#known-issues
                "polling_interval": 20,
                "decoders": [
                    {
                        "label": "",
                        "port": 0,
                        "type": "console"
                    }
                ]
            },
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "svdPath": "${workspaceFolder}/svd/STM32F4_svd_V2.0/STM32F429.svd",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none"
        }
    ]
}
